package simplecalculate;

import static java.lang.System.in;
import java.util.Scanner;

/**
 *
 * @author ianse
 */
public class SimpleCalculate {

    /**
     * @param args the command line arguments
     */
    
    static void welcome(){
        System.out.println("Welcome to this simple maths program!");
        initialize();
    }
    static void initialize(){
       Scanner in = new Scanner(System.in);
       
        
        System.out.println("Input first number: ");
        double num1 = in.nextInt();
      
        System.out.println("Input second number: ");
        double num2 = in.nextInt();
        
        System.out.println("Here are all the different possibilities!");
        System.out.println("Addition: " + num1 + "+" + num2 + " " + (num1 + num2));
        System.out.println("Subtraction: " + num1 + "-" + num2 + " " +(num1 - num2));
        System.out.println("Multiplation: " + num1 + "x" + num2 + " " +(num1 * num2));
        System.out.println("Division: " + num1 + "รท" + num2 + " " +(num1/num2));
        
        
        
        
   }
    
  
    
    
    
    
    
    public static void main(String[] args) {
       
        welcome();
       
        
        
            
        }
        
        
        
        // TODO code application logic here
    }
    
